<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReciterTexte">

    <TableLayout
        android:id="@+id/Table_ReciterTexte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Tour_Reciter"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-11dp"
        android:layout_marginBottom="11dp">

        <TextView
            android:id="@+id/TexteDit_Reciter"
            style="@style/texte"
            android:layout_width="367dp"
            android:layout_height="71dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Le texte que vous allez dire va s'afficher ici." />
        <TextView
            android:id="@+id/Correction_Reciter"
            style="@style/texte"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Ici bientÃ´t la correction." />

    </TableLayout>

    <TextView
        android:id="@+id/Tour_Reciter"
        style="@style/texte"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/Mic_Button_Reciter"
        android:text="A votre tour"/>

    <ImageButton
        android:id="@+id/Mic_Button_Reciter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mic_black_50dp"
        android:onClick="onSpeechToTextButtonClicked"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="75dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/transparent"/>


    <Button
        android:id="@+id/ArreterRecitation_Button_Reciter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Tour_Reciter"
        android:layout_toRightOf="@id/Mic_Button_Reciter"
        style="@style/Bouton"
        android:onClick="AfficherResultatSimple"
        android:text="Terminer"/>


    <Button
        android:id="@+id/Bouton_Test"
        style="@style/Bouton"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tour_Reciter"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-57dp"
        android:layout_toRightOf="@id/Mic_Button_Reciter"
        android:onClick="compareTexts"
        android:layout_marginRight="65dp"
        android:text="Comparer" />



</RelativeLayout>
